#string indexing  positive indexing
a="My name is Vikash kumar"
print(a)
print(a[5])
print(a[11])
print(a[15])

# #negative indexing
print(a[-1])
print(a[-5])
print(a[-15])


# #string slicing by positive indexing
print(a[2:15:2])
print(a[:15:3])
print(a[0:])
print(a[:10])
print(a[::])

#string slicing by negative indexing
print(a[::-1])
print(a[10:4:-1])
print(a[::-2])
print(a[10:0:-5])

a=input("str:")
l=len(a)
l-=1
print(a[1:l:])

b=input("str2:")
if len(b)==0:
    print("null")
elif len(b)==1:
    print(b)
else:
    print(b[-1],b[1:-1],b[0],sep="")



